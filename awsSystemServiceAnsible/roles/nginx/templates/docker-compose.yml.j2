version: '3.8'

services:
  nginx:
    image: nginx:{{ nginx_version }}
    container_name: nginx-server
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./conf/nginx.conf:/etc/nginx/nginx.conf
      - ./logs:/var/log/nginx
    restart: unless-stopped
    networks:
      - nginx-net

networks:
  nginx-net:
    driver: bridge